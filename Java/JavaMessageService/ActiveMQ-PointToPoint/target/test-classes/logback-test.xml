<configuration>

  <!-- PROPERTIES -->
  <property name="logFile" value="jms-activemq-point-to-point-test.log" />

  <!-- LOGBACK APPENDERS -->
  <appender name="LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

    <File>${logFile}</File>

    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${logFile}.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>30</maxHistory>
    </rollingPolicy>

    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level [%thread][%logger{0}]%m%n</pattern>
    </encoder>
  </appender>

  <appender name="LOG_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
      by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level [%thread][%logger{0}]%m%n</pattern>
    </encoder>
  </appender>

  <logger name="com.codenotfound.jms.ptp" level="DEBUG" />

  <!-- ActiveMQ log level -->
  <logger name="org.apache.activemq" level="ERROR" />

  <!-- LOG LEVEL -->
  <root level="WARN">
    <appender-ref ref="LOG_FILE" />
    <appender-ref ref="LOG_STDOUT" />
  </root>

</configuration>